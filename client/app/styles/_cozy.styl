@font-face
    font-family styled
    src url('/fonts/maven-pro-light-200.otf')

@font-face
    font-family main
    src url('/fonts/signika-light.ttf')

a
    color basecolor

a:hover
    color actioncolor

input
select
textarea
    border 1px solid basecolor
    border-radius 0
    font-family styled

input:hover
select:hover
textarea:hover
    border 1px solid actioncolor

input:active
select:active
textarea:active
    box-shadow none

.modal-header
    background-color bluegreen
    color white
    font-family styled
    font-size 26px
    padding 20px
    border-top-left-radius 5px
    border-top-right-radius 5px

.modal-body
    font-family main

    input
    select
        border 1px solid blue
        border-radius 0
        font-family styled

        &:hover
            border 1px solid orange

        &:focus
        &:active
            border 1px solid blue
            box-shadow none

/*      COZY BUTTONS    */
.btn
  // position: relative for spinner
  position relative

  &.btn-cozy
    background-color basecolor
    border-color basecolor
    font-family main
    color white

    .caret
      border-top-color white
      border-bottom-color white

    &:hover
      background-color actioncolor
      border-color actioncolor

  &.btn-cozy.toggled
    box-shadow 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)
    background-color basecolor - 10%

    &:hover
      background-color actioncolor - 10%

  &.btn-cozy-contrast
    background-color contrastcolor - 10%
    border-color contrastcolor - 10%
    color white

    &:hover
      background-color actioncolor
      border-color actioncolor
