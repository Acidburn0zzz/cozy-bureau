.two-panes
  @extend $app-2panes-toolbar

.two-panes__menu
  width 200px
  padding-right .5em
  background-color grey-01
  font-size em(20px)
  font-weight bold
  ul
    padding 0

.two-panes__menu__item
  list-style none
  margin .3em 0
  border-radius 0 4px 4px 0
  transition background-color .1s
  &:hover
    background-color grey-03
  a
    display block
    padding .6em 2.5em
    color grey-07
    text-decoration none

.two-panes__menu__item--active
  background-color blue
  &:hover
    background-color blue
  a
    color white
