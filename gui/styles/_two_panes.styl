.two-panes
  @extend $app-2panes-toolbar

.two-panes__menu
  width 250px
  padding-right .5em
  background-color grey-01
  font-size 1.25rem
  font-weight bold
  ul
    padding 0

.two-panes__menu__item
  list-style none
  border-radius 0 4px 4px 0
  transition background-color .1s
  &:hover
    background-color grey-03
  a
    display block
    padding .6em 2.5em
    color grey-06
    text-decoration none
    line-height 1
  svg
    margin-right .7em

.two-panes__menu__item--active
  background-color blue
  &:hover
    background-color blue
  a
    color white

.two-panes__content
  flex 1
  padding 2em
  color grey-06

  a
    color blue
    text-decoration none
  h3
    a
      color grey-06

  .btn
    display inline-block
    width 300px
    color blue
    background-color grey-01
    padding .8em
    text-align center
    text-transform uppercase
    text-decoration none
    font-weight bold
    font-size 1.25rem
    border-radius .25em
    &:hover
      background-color grey-03

  .btn--danger
    color #FD7461
