@require '_spin'

.two-panes
  display flex
  width 100vw
  height 100vh

.two-panes__menu
  display flex
  flex-direction column
  width 13em
  padding-right .5em
  background-color grey-01
  font-size 1.25rem
  font-weight bold
  ul
    padding 0

.two-panes__menu__item
  list-style none
  border-radius 0 4px 4px 0
  transition background-color .1s
  &:hover
    background-color grey-03
  a
    display block
    padding .6em 2em
    color grey-06
    text-decoration none
    line-height 1
  svg
    margin-right .7em

.two-panes__menu__item--active
  background-color blue
  &:hover
    background-color blue
  a
    color white

.two-panes__content
  flex 1
  padding 2em
  color grey-07
  overflow-x hidden

  a
    color blue
    text-decoration none
  h2
    margin-top 2em
  h3
    a
      color grey-06
      font-size 1em

  .btn
    display inline-block
    width 15em
    color blue
    background-color grey-01
    padding .8em
    text-align center
    text-transform uppercase
    text-decoration none
    font-weight bold
    font-size 1.25rem
    border-radius .25em
    &:hover
      background-color grey-03
    &:active
      background-color grey-04
    &[aria-busy=true]
      position relative
      &:before
        @extend $icon
        @extend $spin
        @extend $icon-16
        background-image url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='12' height='12' fill='rgb(255,255,255)'><path opacity='.25' d='M16 0a16 16 0 0 0 0 32 16 16 0 0 0 0-32m0 4a12 12 0 0 1 0 24 12 12 0 0 1 0-24'/><path d='M16 0a16 16 0 0 1 16 16h-4a12 12 0 0 0-12-12z'/></svg>")
        left 10%

  .btn--action
    color white
    background-color blue

  .btn--danger
    color #FD7461
    &[aria-busy=true]:before
      background-image url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='12' height='12' fill='rgb(253,116,97)'><path opacity='.25' d='M16 0a16 16 0 0 0 0 32 16 16 0 0 0 0-32m0 4a12 12 0 0 1 0 24 12 12 0 0 1 0-24'/><path d='M16 0a16 16 0 0 1 16 16h-4a12 12 0 0 0-12-12z'/></svg>")

  .help-list
    display flex
    padding 0
    li
      flex 1
      display inline-block
      box-sizing border-box
      padding 1em
    a
      display flex
      flex-direction column
      align-items center
    .icon
      display block
      width 96px
      height 96px
      margin-bottom .3em
      background-image url('images/sprite-help.svg')
      background-size auto 100%
      background-repeat no-repeat
    .icon--forum
      background-position 0 0
    .icon--irc
      background-position -96px 0
    .icon--github
      background-position -192px 0
    .icon--email
      background-position -288px 0
    .icon--twitter
      background-position -384px 0
    .icon--documentation
      background-position -480px 0

  .status
    display flex
    line-height 2
  .status__icon
    flex-shrink 0
    box-sizing border-box
    width 2em
    height 2em
    border-radius 1em
    margin-right .5em
  .status__icon--uptodate
    background-color #27d179
    padding .2em
  .status__icon--offline
    background-color orange
    padding .2em
  .status__icon--sync
    background-color blue
    padding .1em
    animation rotate linear 1.3s infinite
  .status__icon--error
    background-color red

  .disk-space
    display flex
    line-height 2.4
  .disk-space__icon
    margin-right .5em

  .recent-files
    margin-bottom 0
    padding 0
    list-style none
    li
      display block
      height 3em
      min-height 48px
      padding .8em .2em
      &:not(:last-child)
        border-bottom 1px solid grey-03
      span
        color grey-05
  .file-name
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    margin .2em 0
  .file-size::after
    content ' â€¢ '
    margin 0 .25em
  .file-type
    display block
    float left
    width 48px
    height 48px
    margin-right .8em
    background-image url('images/sprite-files-type.svg')
    &.file-type-folder
      background-position 0 0
    &.file-type-file
      background-position -48px 0
    &.file-type-archive
      background-position -96px 0
    &.file-type-code
      background-position -144px 0
    &.file-type-text
      background-position -192px 0
    &.file-type-presentation
      background-position -240px 0
    &.file-type-spreadsheet
      background-position -288px 0
    &.file-type-pdf
      background-position -336px 0
    &.file-type-binary
      background-position -364px 0
    &.file-type-audio
      background-position -432px 0
    &.file-type-video
      background-position -480px 0
    &.file-type-image
      background-position -528px 4px

  .send-mail-to-support
    textarea
      width 100%
      height 10em
      background-color grey-01
      border 1px solid grey-03
      border-radius 5px
      margin-bottom .5em

  .message--success
    color blue
    font-weight bold

  .message--error
    color red
    font-weight bold

  [data-input=checkbox]
    label
      padding-left 1.75em
